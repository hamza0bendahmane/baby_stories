<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#123456"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_marginTop="30dp"
        android:layout_height="200dp"
        android:src="@drawable/baby_stories_im"
     />

    <TextView
        android:id="@+id/bodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
 />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    android:gravity="center"
    android:orientation="horizontal"
    >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/eval_app"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/eval_app"
        android:layout_marginHorizontal="10dp"
        ads:backgroundTint="@color/color5"
        ads:cornerRadius="20dp"
        ads:icon="@drawable/star_24dp"
        ads:iconSize="30dp"
        ads:iconTint="#123456"
       />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/comm_dev"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comm_dev"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        ads:backgroundTint="@color/color3"
        ads:cornerRadius="20dp"
        ads:icon="@drawable/ic_email_black_24dp"
        ads:iconSize="30dp"
        ads:iconTint="#123456"
       />
    </LinearLayout>
    <TextView
        android:id="@+id/rights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:textStyle="bold"
       />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewAct4"
        android:layout_width="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner2_ad_unit_id">

    </com.google.android.gms.ads.AdView>
</LinearLayout>

